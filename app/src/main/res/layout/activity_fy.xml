<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/glownyrelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.fitandyummy.ilebije.FY">


    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1.1"
        android:scaleY="1.5"
        android:src="@drawable/tlojasnedwa" />

    <ImageView
        android:id="@+id/introImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="doFY"
        android:src="@drawable/logoduzejasne" />

    <TextView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="260dp"
        android:onClick="doFY"
        android:padding="20dp"
        android:text="Tylko dla użytkowników aplikacji „ILE BIJE” wyjątkowa PROMOCJA CENOWA, aż 15% na wszystkie produkty !!!!!!! "
        android:textAlignment="center"
        android:textColor="@color/bialy"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/introText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:onClick="doFY"
        android:padding="20dp"
        android:text="Odwiedź nasz fanpage na facebook, podaj hasło „ILE BIJE” i rób formę z najlepszą dostępną dietą pudełkową . "
        android:textAlignment="center"
        android:textColor="@color/bialy"
        android:textSize="18sp" />

</RelativeLayout>
